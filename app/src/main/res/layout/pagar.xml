<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f6f6">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_below="@+id/restaurantTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurante 1"
            android:id="@+id/restaurantTitle"
            android:layout_marginTop="33dp"
            android:background="#eae9e8"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="22dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="right"
            android:layout_weight="0.06"
            android:textColor="#000000"
            android:hint="Credit Card Number" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:ems="10"
            android:id="@+id/CVC"
            android:layout_gravity="right"
            android:layout_weight="0.06"
            android:textColor="#000000"
            android:hint="CVC" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/DATE"
            android:layout_gravity="right"
            android:layout_weight="0.06"
            android:textColor="#000000"
            android:inputType="date"
            android:hint="Fecha de ExpiraciÃ³n" />

        <Button
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:text="Pagar "
            android:onClick="onBuyPressed"
            android:id="@+id/pay_button"
            android:layout_gravity="center_horizontal" />


    </LinearLayout>


</RelativeLayout>